<%- include('../partials/head') %>
  </head>

  <body>
    <%- include('../partials/nav') %>
      <main class="container mx-auto mt-8 p-8 bg-white rounded-lg shadow-md max-w-2xl">
        <h1 class="text-3xl font-bold mb-6 text-center text-gray-800 border-b pb-4">Welcome Back</h1>
        <form action="/login" method="POST" class="max-w-md mx-auto">
          <!-- Email/Username field -->
          <div class="mb-5">
            <label for="username" class="block text-sm font-medium text-gray-700 mb-1">Email or Username</label>
            <div class="relative">
              <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400">
                <i class="fas fa-user"></i>
              </span>
              <input type="text" id="username" name="username" placeholder="your@email.com or username"
                class="w-full pl-10 px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 transition"
                required />
            </div>
          </div>
          <!-- Password field -->
          <div class="mb-5">
            <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
            <div class="relative">
              <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400">
                <i class="fas fa-lock"></i>
              </span>
              <input type="password" id="password" name="password" placeholder="Enter Your Password"
                class="w-full pl-10 px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 transition"
                required />
            </div>
          </div>
          <!-- Remember me and forgot password -->
          <div class="flex items-center justify-between mb-6">
            <label class="inline-flex items-center cursor-pointer">
              <input type="checkbox" name="remember" class="form-checkbox text-red-500 focus:ring-red-500">
              <span class="ml-2 text-gray-700 text-sm">Remember me</span>
            </label>
            <a href="#" class="text-sm text-red-500 hover:underline">Forgot password?</a>
          </div>
          <!-- Submit button -->
          <button type="submit"
            class="w-full bg-red-500 text-white py-3 rounded-md hover:bg-red-600 focus:ring-4 focus:ring-red-300 font-medium transition duration-300 flex items-center justify-center">
            <span>Sign In</span>
            <i class="fas fa-arrow-right ml-2"></i>
          </button>
          <!-- Signup link -->
          <p class="text-center mt-4 text-gray-600">
            Don't have an account?
            <a href="/signup" class="text-red-500 hover:underline">Sign up</a>
          </p>
        </form>
      </main>
  </body>

  </html>